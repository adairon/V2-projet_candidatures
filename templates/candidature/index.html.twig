                {% elseif candidature.etape.etape == 'Candidature retenue' %}
                    <div class="card-header bg-success">
                
                {% elseif candidature.etape.etape == 'Attente réponse' %}
                    <div class="card-header bg-warning">
                
                {% elseif candidature.etape.etape == 'Entretien à venir' %}
                    <div class="card-header bg-primary">

                {% else %}
                    <div class="card-header">
                {% endif %}

                    {{ candidature.etape.etape }} <br>
                    <span class="small">
                        (Maj le {{ candidature.MiseAJour ? candidature.MiseAJour|date('d/m/Y') : '' }})
                    </span>
                    {# <br> <hr> #}
                    {# envoyée le : {{ candidature.DateEnvoi ? candidature.DateEnvoi|date('d/m/Y') : '' }} #}
                </div>
                    <div class="card-body">

                    <div class="row align-items-center">
                        <div class="card-title col-8 text-align-left">
                            <h6>{{ candidature.Contrat }}</h6>
                            <h5>{{ candidature.Poste }}</h5>
                            {{ candidature.Entreprise }} <br>
                        </div>
                            {# ({{ candidature.Localisation }}) #}
                        {# <p class="card-text">
                            Plateforme d'envoi : {{ candidature.Plateforme }}
