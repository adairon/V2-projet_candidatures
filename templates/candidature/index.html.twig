            {% if candidature.etape.etape == 'Candidature refusée' %}
                <div class="card border-danger text-center col-9 cardDef" style="display:block" data-index="{{ candidature.DateEnvoi ? candidature.DateEnvoi|date('Ymd') : ''  }}">
            
            {% elseif candidature.etape.etape == 'Candidature retenue' %}
                <div class="card border-success text-center col-9 cardDef" style="display:block" data-index="{{ candidature.DateEnvoi ? candidature.DateEnvoi|date('Ymd') : ''  }}">
            
            {% elseif candidature.etape.etape == 'Attente réponse' %}
                <div class="card border-warning text-center col-9 cardDef" style="display:block" data-index="{{ candidature.DateEnvoi ? candidature.DateEnvoi|date('Ymd') : ''  }}">
            
            {% elseif candidature.etape.etape == 'Entretien à venir' %}
                <div class="card border-primary text-center col-9 cardDef" style="display:block" data-index="{{ candidature.DateEnvoi ? candidature.DateEnvoi|date('Ymd') : ''  }}">

            {% else %}
                 <div class="card text-center col-9 cardDef" style="display:block" data-index="{{ candidature.DateEnvoi ? candidature.DateEnvoi|date('Ymd') : ''  }}">
            {% endif %}

                {% if candidature.etape.etape == 'Candidature refusée' %}
